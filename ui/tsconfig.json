{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@testing-library/jest-dom"],
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/api": ["./src/api/index"],
      "@/api/*": ["./src/api/*"],
      "@/components/*": ["./src/components/*"],
      "@/generated/*": ["./src/generated/*"],
      "@/graphql/*": ["./src/graphql/*"],
      "@/graphql": ["./src/graphql/index"],
      "@/uiComponents": ["./src/uiComponents/index"],
      "@/uiComponents/*": ["./src/uiComponents/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/layoutComponents": ["./src/layoutComponents/index"],
      "@/types": ["./src/types/index"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils/index"],
      "@/utils/*": ["./src/utils/*"],
      "@/redux": ["./src/redux/index"],
      "@/router/*": ["./src/router/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}

{
  "name": "jore4-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ws:db": "yarn workspace @hsl/jore4-test-db-manager",
    "ws:ui": "yarn workspace @hsl/jore4-ui",
    "ws:e2e": "yarn workspace @hsl/jore4-cypress",
    "dev": "yarn ws:ui run dev",
    "gql:generate-types": "TS_NODE_PROJECT=ui/tsconfig.codegen.json graphql-codegen --config codegen/codegen.js && prettier --write ui/src/generated/graphql.tsx",
    "ts:check": "yarn workspaces run ts:check",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint './**/*.{ts,tsx}' --max-warnings=0",
    "test": "yarn ws:ui test",
    "test:e2e": "yarn ws:db build && yarn ws:e2e cypress run",
    "test:e2e:open": "yarn ws:db build && yarn ws:e2e cypress open",
    "test:e2e:skip-map": "yarn ws:db build && CYPRESS_SKIP_MAP_TESTS=true yarn ws:e2e cypress run",
    "qa": "yarn --frozen-lockfile && yarn ts:check && yarn prettier:check && yarn lint && yarn test && yarn test:e2e"
  },
  "dependencies": {
    "@graphql-tools/load": "^7.5.1",
    "@graphql-tools/merge": "^8.2.2",
    "@graphql-tools/schema": "^8.3.6",
    "@graphql-typed-document-node/core": "^3.1.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/plugin-helpers": "^2.4.2",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-operations": "^2.2.0",
    "@graphql-codegen/typescript-react-apollo": "^3.2.1",
    "@graphql-codegen/visitor-plugin-common": "^2.7.4",
    "@types/jest": "^26.0.22",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.7.0",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.4.3"
  },
  "workspaces": [
    "ui",
    "cypress",
    "test-db-manager"
  ]
}
